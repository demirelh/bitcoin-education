# Required API Keys
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx
WHISPER_API_KEY=  # falls back to OPENAI_API_KEY if empty

# Podcast Source
SOURCE_TYPE=youtube_rss
PODCAST_YOUTUBE_CHANNEL_ID=UCxxxxxxxxxxxxxxxxxx
# PODCAST_RSS_URL=https://custom.feed/rss  # override if source_type=rss

# Database (default: SQLite in data/)
DATABASE_URL=sqlite:///data/btcedu.db

# Raw data storage
RAW_DATA_DIR=data/raw

# Transcription
TRANSCRIPTS_DIR=data/transcripts
WHISPER_MODEL=whisper-1
WHISPER_LANGUAGE=de

# Chunking
CHUNKS_DIR=data/chunks
CHUNK_SIZE=1500
CHUNK_OVERLAP=0.15

# Audio
AUDIO_FORMAT=m4a

# Content Generation
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.3
DRY_RUN=false

# TTS / ElevenLabs (Sprint 8)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
ELEVENLABS_MODEL=eleven_multilingual_v2
ELEVENLABS_STABILITY=0.5
ELEVENLABS_SIMILARITY_BOOST=0.75
ELEVENLABS_STYLE=0.0
ELEVENLABS_USE_SPEAKER_BOOST=true

# Render / ffmpeg (Sprint 9)
RENDER_RESOLUTION=1920x1080
RENDER_FPS=30
RENDER_CRF=23
RENDER_PRESET=medium
RENDER_AUDIO_BITRATE=192k
RENDER_FONT=NotoSans-Bold
RENDER_TIMEOUT_SEGMENT=300
RENDER_TIMEOUT_CONCAT=600

# Output
OUTPUTS_DIR=data/outputs

# Reports & Logs
REPORTS_DIR=data/reports
LOGS_DIR=data/logs
